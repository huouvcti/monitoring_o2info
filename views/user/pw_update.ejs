<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>o2 정보통신</title>


        <link rel="canonical" href="https://getbootstrap.com/docs/5.2/examples/sidebars/">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" />


        <link rel="stylesheet" href="../../public/stylesheets/menuBar.css" />

        <script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>


        <style>
            #navi{
                width: 50%;
                margin: 90px auto 10px auto;
                color: gray;
                text-align: left;
            }
            #navi a{
                color: gray;
                text-decoration: none;
            }

            #setting{
                width: 50%;
                height: 400px;
                margin: 0px auto;
                padding: 30px;
                background-color: #fff;

                display: grid;
                grid-template-rows: 1fr 3fr;
            }

            #input_wrap{
                width: 80%;
                margin: 0 auto;
                display: grid;
                grid-template-rows: repeat(4, 1fr);
                grid-gap: 25px;
            }

            .input_wrap{
                display: grid;
                grid-template-columns: 1fr 1fr;
                grid-gap: 10px;
            }

            .input_wrap label{
            }

            .input_wrap input{
                transition: 0.5s;
            }
            .input_wrap input:focus{
                border: none;
                outline-color: #2F4187;
                transform: scale(1.05);
            }

            #input_wrap button{
                border: none;
                border-radius: 2px;
                box-shadow: 0px 0px 5px #ccc;
                transition: 0.3s;
            }
            #input_wrap button:hover{
                background-color: #2F4187;
                color: #fff;
            }
        </style>

    </head>

    <body>

        <main class="d-flex flex-nowrap">

            <%-include('../lib/menuBar.ejs') %>

            <script>
                let menubar = document.getElementById("menuBar")
                menubar.children[2].children[0].className = "nav-link active";
            </script>

            <div class="b-example-divider b-example-vr" id="board" style="position:absolute; width: 95%; right: 0;">
                
                <div id="navi">
                    <a href="/setting">설정</a> >
                    <a href="#">비밀번호 변경</a>
                </div>
                <div id="setting">
                    <h3>비밀번호 변경 <hr style="color: gray;"></h3>

                    <div id="input_wrap">
                        <div class="input_wrap">
                            <label for="input_id">아이디</label>
                            <input type="text" id="input_id">
                        </div>
                        <div class="input_wrap">
                            <label for="input_pw">비밀변호</label>
                            <input type="password" id="input_pw">
                        </div>
                        <div class="input_wrap">
                            <label for="input_pw_new">새로운 비밀번호</label>
                            <input type="password" id="input_pw_new">
                        </div>
                        <button onclick="pw_update()">변경하기</button>
                    </div>
                    
                </div>
                
            </div>


            <script>
                window.onload = function(){
                    
                }


                
            </script>

            <script src="../../public/javascripts/pw_update.js"></script>
            <script src="../../public/javascripts/menubar.js"></script>

        </main> 

    </body>
</html>